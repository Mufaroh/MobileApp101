<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Circle centered at the top -->
    <ImageView
        android:id="@+id/circle1"
        android:layout_width="312dp"
        android:layout_height="365dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/green"
        android:foreground="@drawable/circle_shape"
        android:paddingBottom="20dp"
        android:scaleType="fitCenter"/>

    <!-- TextView below the circle -->
    <TextView
        android:id="@+id/correctionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle1"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:text="Balance Enquiry"
        android:textColor="@color/green"
        android:textSize="25sp" />

    <!-- Button below the TextView -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/correctionTextView"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:text="CONTINUE"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:theme="@style/nelly_theme" />

</RelativeLayout>
